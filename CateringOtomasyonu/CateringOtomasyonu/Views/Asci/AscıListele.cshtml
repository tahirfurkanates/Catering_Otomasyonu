@model List<CateringOtomasyonu.db.Personeller>
@{
    ViewData["Title"] = "Aşçı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid py-3">
    <h2 class="mb-3">Aşçı Güncelle liste</h2>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success">@TempData["Mesaj"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Görev</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr><td colspan="5" class="text-center text-muted py-4">Kayıt bulunamadı.</td></tr>
                        }
                        else
                        {
                            foreach (var a in Model)
                            {
                                <tr id="row-@a.PersonelId">
                                    <td class="fw-semibold">@a.Ad @a.Soyad</td>
                                    <td>@a.Email</td>
                                    <td>@a.Telefon</td>
                                    <td>@(string.IsNullOrWhiteSpace(a.Gorev) ? "Aşçı" : a.Gorev)</td>
                                   
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


