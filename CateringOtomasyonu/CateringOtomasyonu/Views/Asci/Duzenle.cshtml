@model CateringOtomasyonu.db.Personeller
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Aşçı Düzenle";
}
<div class="card p-4 shadow-sm">
    <h5 class="mb-3">Aşçı Düzenle</h5>
    <form method="post" asp-action="Duzenle">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PersonelId" />
        <div class="row g-3">
            <div class="col-md-6"><label class="form-label">Ad</label><input asp-for="Ad" class="form-control" required /></div>
            <div class="col-md-6"><label class="form-label">Soyad</label><input asp-for="Soyad" class="form-control" required /></div>
            <div class="col-md-6"><label class="form-label">Telefon</label><input asp-for="Telefon" class="form-control" /></div>
            <div class="col-md-6"><label class="form-label">E-posta</label><input asp-for="Email" type="email" class="form-control" required /></div>
            <div class="col-md-6"><label class="form-label">Şifre</label><input asp-for="Sifre" type="text" class="form-control" required /></div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">Geri</a>
            <button class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
