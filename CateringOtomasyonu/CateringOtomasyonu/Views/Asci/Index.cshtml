@model IEnumerable<CateringOtomasyonu.db.Personeller>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Aşçılar";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="m-0">Aşçılar</h5>
    <a class="btn btn-primary" asp-action="Ekle">Yeni Aşçı</a>
</div>

@if (TempData["Mesaj"] != null)
{
     <div class="alert alert-success">@TempData["Mesaj"]</div>
}

<div class="card p-0 shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>E-posta</th>
                    <th>Telefon</th>
                    <th style="width:160px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.PersonelId</td>
                        <td>@x.Ad @x.Soyad</td>
                        <td>@x.Email</td>
                        <td>@x.Telefon</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Duzenle" asp-route-id="@x.PersonelId">Düzenle</a>
                            <form asp-action="Sil" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@x.PersonelId" />
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
