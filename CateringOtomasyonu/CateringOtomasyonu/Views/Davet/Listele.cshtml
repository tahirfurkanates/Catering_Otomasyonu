@model IEnumerable<CateringOtomasyonu.ViewModels.DavetListItemVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var q = (string)ViewBag.q ?? "";
}
@section Styles {
    <style>
        .cardish {
            border: 1px solid rgba(15,23,42,.08);
            border-radius: 16px;
            background: #fff;
            box-shadow: 0 10px 30px rgba(2,8,23,.06);
        }
    </style>
}
<div class="cardish p-3">
    <div class="d-flex justify-content-between align-items-center mb-3 gap-2 flex-wrap">
        <h5 class="m-0">Davetler</h5>
        <form method="get" class="d-flex gap-2">
            <input type="search" class="form-control" name="q" value="@q" placeholder="Konum / Müşteri ara...">
            <button class="btn btn-outline-primary">Ara</button>
        </form>
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success">@TempData["Mesaj"]</div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Başlangıç</th>
                    <th>Bitiş</th>
                    <th>Konum</th>
                    <th>Müşteri</th>
                    <th>Durum</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.EtkinlikId</td>
                        <td>@r.Baslangic.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(r.Bitis?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                        <td>@(string.IsNullOrWhiteSpace(r.Konum) ? "-" : r.Konum)</td>
                        <td>@(string.IsNullOrWhiteSpace(r.MusteriAd) ? "-" : r.MusteriAd)</td>
                        <td>@(string.IsNullOrWhiteSpace(r.Durum) ? "-" : r.Durum)</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Duzenle" asp-route-id="@r.EtkinlikId">Düzenle</a>
                            <form asp-action="Sil" method="post" class="d-inline" onsubmit="return confirm('Silinsin mi?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.EtkinlikId" />
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
