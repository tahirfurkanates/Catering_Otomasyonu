@model IEnumerable<CateringOtomasyonu.Models.OneriSikayet>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Öneri & Şikayetler";
}
<div class="card p-3 shadow-sm">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h5 class="m-0">Öneri & Şikayetler</h5>
        <span class="text-muted small">Toplam: @Model.Count()</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>E-posta</th>
                    <th>Mesaj</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th style="width:170px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr class="@(x.Okundu ? "" : "table-warning")">
                        <td>@x.OneriSikayetId</td>
                        <td>@x.AdSoyad</td>
                        <td>@(string.IsNullOrWhiteSpace(x.Email) ? "-" : x.Email)</td>
                        <td class="text-truncate" style="max-width:420px">@x.Mesaj</td>
                        <td>@x.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@(x.Okundu ? "Okundu" : "Yeni")</td>
                        <td class="text-end">
                            <form asp-action="Okundu" asp-controller="Feedback" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@x.OneriSikayetId" />
                                <input type="hidden" name="ok" value="@(x.Okundu ? "false" : "true")" />
                                <button class="btn btn-sm btn-outline-secondary">@((x.Okundu) ? "Geri Al" : "Okundu")</button>
                            </form>
                            <form asp-action="Sil" asp-controller="Feedback" method="post" class="d-inline ms-1" onsubmit="return confirm('Silinsin mi?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@x.OneriSikayetId" />
                                <button class="btn btn-sm btn-outline-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
