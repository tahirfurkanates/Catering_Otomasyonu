@model CateringOtomasyonu.ViewModels.HastaPanelViewModel
@{
    ViewData["Title"] = "Hasta Paneli";
    Layout = "~/Views/Shared/_HastaLayout.cshtml";
}

<div class="container-fluid px-2 px-md-4">
    <h1 class="mt-4 mb-3">Hasta Paneli</h1>

    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Yaklaşan Randevu</h6>
                        <h2 class="mb-0 fs-3">@Model.UpcomingAppointments</h2>
                    </div>
                    <div class="ms-auto bg-primary bg-opacity-10 p-3 rounded">
                        <i class="bi bi-calendar-check text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div>
                        <h6 class="card-title text-muted mb-1">Geçmiş Muayeneler</h6>
                        <h2 class="mb-0 fs-3">@Model.PastExaminations</h2>
                    </div>
                    <div class="ms-auto bg-info bg-opacity-10 p-3 rounded">
                        <i class="bi bi-journal-medical text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="card shadow-sm mb-4">
        <div class="card-header"><h5 class="mb-0">Hızlı İşlemler</h5></div>
        <div class="card-body d-grid gap-2 gap-md-3">
            <a href="/HastaPanel/RandevuAl" class="btn btn-primary btn-lg"><i class="bi bi-plus-circle"></i> Randevu Al</a>
            <a href="/HastaPanel/Randevularim" class="btn btn-warning btn-lg"><i class="bi bi-journal-medical"></i> Muayene Geçmişim</a>
        </div>
    </div>
</div>
