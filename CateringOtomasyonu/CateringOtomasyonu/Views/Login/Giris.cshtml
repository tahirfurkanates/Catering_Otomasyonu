@{
    ViewData["Title"] = "Giriş Yap";
    var returnUrl = Context?.Request?.Query["ReturnUrl"].ToString();
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="min-width: 350px;">
        <h4 class="text-center mb-4">Kullanıcı Girişi</h4>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form method="post">
            <input type="hidden" name="returnUrl" value="@returnUrl" />

            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" name="kullaniciAdi" required autofocus />
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input type="password" class="form-control" name="sifre" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
        </form>
    </div>
</div>
