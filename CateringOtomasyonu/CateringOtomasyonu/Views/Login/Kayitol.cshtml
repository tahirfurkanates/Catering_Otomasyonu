@model CateringOtomasyonu.ViewModels.KayitOlViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="min-width: 400px;">
        <h4 class="text-center mb-4">Kayıt Ol</h4>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        @* ModelState hataları için toplu özet *@
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

        <!-- ÖNEMLİ: form nereye post edecek? Login/KayitOl -->
        <form asp-controller="Login" asp-action="KayitOl" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Ad</label>
                <input asp-for="Ad" class="form-control" required />
                <span asp-validation-for="Ad" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Soyad</label>
                <input asp-for="Soyad" class="form-control" required />
                <span asp-validation-for="Soyad" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control" required />
                <span asp-validation-for="Telefon" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Adres</label>
                <textarea asp-for="Adres" class="form-control" rows="2" required></textarea>
                <span asp-validation-for="Adres" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input asp-for="KullaniciAdi" class="form-control" required />
                <span asp-validation-for="KullaniciAdi" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input asp-for="Sifre" type="password" class="form-control" required />
                <span asp-validation-for="Sifre" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
