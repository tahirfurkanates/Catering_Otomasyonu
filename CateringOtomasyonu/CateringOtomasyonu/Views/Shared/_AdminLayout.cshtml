@using Microsoft.AspNetCore.Http
@{
    var name = Context?.Session?.GetString("KullaniciAdi") ?? "Admin";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --admin: #0d6efd;
            --ink: #0f172a;
            --border: rgba(15,23,42,.08);
        }

        body {
            font-family: -apple-system,BlinkMacSystemFont,"SF Pro Text","SF Pro Display","Segoe UI",Roboto,Arial,sans-serif;
        }

        .sidebar {
            width: 260px;
            border-right: 1px solid var(--border);
            min-height: 100vh;
            background: #fff;
            position: sticky;
            top: 0;
        }

            .sidebar a {
                text-decoration: none;
                color: #334155;
                font-weight: 600;
                display: block;
                padding: .65rem .9rem;
                border-radius: .6rem;
            }

                .sidebar a.active, .sidebar a:hover {
                    background: #eef4ff;
                    color: #0b5ed7;
                }

        .app {
            display: grid;
            grid-template-columns: 260px 1fr;
        }

        .app-header {
            border-bottom: 1px solid var(--border);
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 2;
        }
    </style>
    @RenderSection("Styles", false)
</head>
<body>
    <div class="app">
        <aside class="sidebar p-3">
            <div class="d-flex align-items-center gap-2 mb-3">
                <span class="badge text-bg-primary">Admin</span>
                <div class="fw-bold">@name</div>
            </div>

            <nav class="d-grid gap-1">
                <a class="@(ViewContext.RouteData.Values["controller"]?.ToString()=="AdminPanel" ? "active" : "")"
                   asp-controller="AdminPanel" asp-action="Index">📊 Gösterge Paneli</a>

                <a class="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Davet" && ViewContext.RouteData.Values["action"]?.ToString()=="Listele" ? "active" : "")"
                   asp-controller="Davet" asp-action="Listele">📅 Davetleri Listele</a>

                <!-- >>> BURASI: Toplu Görsel Yükle linki -->
                <a class="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Menu" && ViewContext.RouteData.Values["action"]?.ToString()=="TopluResimYukle" ? "active" : "")"
                   asp-controller="Menu" asp-action="TopluResimYukle">📷 Toplu Görsel Yükle</a>
                <!-- <<< -->

                <a class="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Feedback" ? "active" : "")"
                   asp-controller="Feedback" asp-action="Listele">💬 Öneri & Şikayetler</a>

                <a class="@(ViewContext.RouteData.Values["controller"]?.ToString()=="Asci" ? "active" : "")"
                   asp-controller="Asci" asp-action="Index">👨‍🍳 Aşçılar</a>

            </nav>

            <hr />
            <form asp-controller="Login" asp-action="Cikis" method="post">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-secondary w-100">Çıkış</button>
            </form>
        </aside>

        <main>
            <header class="app-header py-3 px-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <h1 class="h5 m-0">@ViewData["Title"]</h1>
                    <span class="text-muted small">Catering Admin</span>
                </div>
            </header>

            <div class="container-fluid p-3">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
