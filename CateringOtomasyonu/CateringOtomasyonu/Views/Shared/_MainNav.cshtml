@* NAVBAR - cam efekt + tek tip butonlar *@
@using Microsoft.AspNetCore.Http
@{
    // Yerleşik HttpContext (Context) üzerinden session oku — inject gerekmez
    var session = Context?.Session;
    string role = session?.GetString("Role") ?? "";
    string name = session?.GetString("KullaniciAdi") ?? "";
    int cartCount = session?.GetInt32("CartCount") ?? 0;
}
<nav class="navbar navbar-expand-lg sticky-top glass-nav">
    <div class="container">
        <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
            <span class="brand-dot"></span>Catering
        </a>

        <button class="navbar-toggler shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto nav-primary">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="menu">Menü</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="about">Hakkında</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="feedback">Öneri-Şikayet</a></li>

                @if (!string.IsNullOrEmpty(role))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Siparis" asp-action="Siparislerim">Siparişlerim</a></li>
                }
                @if (role == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="AdminPanel" asp-action="Index">Admin Panel</a></li>
                }
            </ul>

            <div class="navbar-text welcome d-none d-lg-block">
                @if (!string.IsNullOrWhiteSpace(name))
                {
                    <text>Hoş geldiniz, <b>@name</b></text>
                    ;
                }
            </div>

            <ul class="navbar-nav ms-auto align-items-center gap-2">
                <!-- Sepet -->
                <li class="nav-item">
                    <a class="btn nav-btn btn-brand position-relative" asp-controller="Siparis" asp-action="Sepet">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                            <path d="M0 1h2l.6 2H14a1 1 0 0 1 1 1l-1.2 6A1 1 0 0 1 12.8 11H5a1 1 0 0 1-1-.8L2.3 3H0z" />
                            <circle cx="6" cy="14" r="1.25"></circle>
                            <circle cx="12" cy="14" r="1.25"></circle>
                        </svg>
                        Sepet
                        <span class="badge-count">@cartCount</span>
                    </a>
                </li>

                @if (!string.IsNullOrEmpty(role))
                {
                    <li class="nav-item d-lg-none text-muted small ps-2">Hoş geldiniz, @name</li>
                    <li class="nav-item">
                        <form asp-controller="Login" asp-action="Cikis" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <button class="btn nav-btn btn-brand-outline">Çıkış</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="btn nav-btn btn-brand" asp-controller="Login" asp-action="Giris">Giriş</a></li>
                    <li class="nav-item"><a class="btn nav-btn btn-brand" asp-controller="Login" asp-action="KayitOl">Kayıt Ol</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
